    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.success && jsonData.data.accessToken) {",
                                    "        pm.environment.set(\"accessToken\", jsonData.data.accessToken);",
                                    "        console.log(\"Access Token set to environment variable\");",
                                    "    }",
                                    "    if (jsonData.success && jsonData.data.user && jsonData.data.user.tenantId) {",
                                    "        pm.environment.set(\"tenantId\", jsonData.data.user.tenantId);",
                                    "        console.log(\"Tenant ID set to environment variable: \" + jsonData.data.user.tenantId);",
                                    "    } else {",
                                    "        console.warn(\"Tenant ID not found in login response\");",
                                    "        // Fallback for testing if no tenantId on user",
                                    "        pm.environment.set(\"tenantId\", \"TENANT_001\");",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"AdminPassword123!\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Authenticate user and receive JWT access token. \n\n**Rules:**\n- Valid credential check\n- Account locking after 5 failed attempts\n- Returns RS256 signed JWT"
                    },
                    "response": []
                }
            ]
        },
